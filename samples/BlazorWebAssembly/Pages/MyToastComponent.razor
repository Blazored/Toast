@if (string.IsNullOrWhiteSpace(Title))
{
    <div class="text-white p-3 bg-primary rounded">
        <h3>I'm a custom toast component</h3>
    </div>
}
else
{
    <div class="text-white p-3 bg-secondary rounded">
        <h3>@Title</h3>
        <h5>@ToastParam</h5>
    </div>
}


@code{
    [Parameter] public string Title { get; set; }
    [Parameter] public string ToastParam { get; set; }
}
