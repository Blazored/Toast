@if (ToastList.Any())
{
    <div class="blazored-toast-container @PositionClass">
        <CascadingValue Value=this>
            @foreach (var toast in ToastList.OrderBy(x => x.TimeStamp))
            {
                if (toast.BlazoredToast is object)
                {
                    <BlazoredToast @key="toast" ToastComponentSettings="toast.ToastComponentSettings" ToastId="toast.Id" Timeout="toast.ToastComponentSettings.Timeout" >
                        @toast.BlazoredToast
                    </BlazoredToast>
                }
                else
                {
                    <BlazoredToast @key="toast" ToastSettings="toast.ToastSettings" ToastId="toast.Id" Timeout="Timeout" />
                }
            }
        </CascadingValue>
    </div>
}
